@model BetterHere.Web.Data.Entities.EstablishmentLocationEntity

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foods.FirstOrDefault().FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods.FirstOrDefault().PicturePathFood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods.FirstOrDefault().Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods.FirstOrDefault().Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foods.FirstOrDefault().TypeFoods.FoodTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Foods)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.PicturePathFood))
                {
                    <img src="@Url.Content(item.PicturePathFood)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeFoods.FoodTypeName)
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    <a asp-action="Index">Back to List</a>
</div>
