@model IEnumerable<BetterHere.Web.Data.Entities.TypeFoodEntity>

@{
    ViewData["Title"] = "Index";
}

    <div>
        <!-- Header -->
        <header id="header" class="alt">
            <div class="logo"><a href="index.html">Better Here <span>by Better Here</span></a></div>
            <a href="#menu">Menu</a>
        </header>
        <!-- Nav -->
        <nav id="menu">
            <ul class="links">
                <li><a asp-area="" asp-controller="Establishments" asp-action="Index">Establishments</a></li>
                <li><a asp-area="" asp-controller="TypeEstablishments" asp-action="Index">Type Establishments</a></li>
